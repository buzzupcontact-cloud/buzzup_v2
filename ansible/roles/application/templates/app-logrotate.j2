{{ web_root }}/logs/*.log {
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    create 644 www-data www-data
    sharedscripts
    postrotate
        # Signal PHP-FPM to reopen log files
        /bin/systemctl reload php{{ php_version }}-fpm > /dev/null 2>&1 || true
    endscript
}